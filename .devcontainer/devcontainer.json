{
    "name": "Sandbox Playground",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "remoteUser": "codespace",
    "hostRequirements": {
        "storage": "64gb"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:latest": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.vscode-yaml"
            ]
        }
    }
}